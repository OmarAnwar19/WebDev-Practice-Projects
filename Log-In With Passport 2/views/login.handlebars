<form action="/login" method="POST">
  <div>
    <h1>Login</h1>
  </div>
  <div class="form-group">
    <label>Email:</label>
    <input type="text" name="email" id="email" placeholder="Email" required />
  </div>
  <div class="form-group">
    <label>Password:</label>
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Password"
      required
    />
  </div>
  <div>
    <input type="submit" value="Login" />
  </div>
</form>